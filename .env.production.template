# Production Environment Configuration Template
# Copy this file to .env.production and update the values

# =============================================
# DATABASE CONFIGURATION
# =============================================

# PostgreSQL Settings
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=trading_db
POSTGRES_USER=trader
POSTGRES_PASSWORD=your_secure_database_password_here

# Database Connection Pool
POSTGRES_MIN_CONN=10
POSTGRES_MAX_CONN=50
POSTGRES_TIMEOUT=60
POSTGRES_CACHE_SIZE=2048

# Database SSL Configuration
POSTGRES_SSL_MODE=require
POSTGRES_SSL_CERT=/path/to/client.crt
POSTGRES_SSL_KEY=/path/to/client.key
POSTGRES_SSL_CA=/path/to/ca.crt

# =============================================
# AUDIT AND COMPLIANCE SETTINGS
# =============================================

# Audit Logging
ENABLE_AUDIT_LOGGING=true
AUDIT_USER_TRACKING=true
ENABLE_QUERY_LOGGING=false

# Session Management
SESSION_TIMEOUT_MINUTES=30
MAX_FAILED_LOGINS=5
REQUIRE_MFA=false

# =============================================
# SECURITY CONFIGURATION
# =============================================

# Application Security
SECRET_KEY=your_super_secret_jwt_signing_key_minimum_32_characters
ALGORITHM=HS256

# CORS Settings (comma-separated origins)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================
# APPLICATION SETTINGS
# =============================================

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
SQL_ECHO=false

# API Configuration
# NOTE: 0.0.0.0 is acceptable in Docker/production with proper firewall/reverse proxy
# The container is isolated and only accessible through controlled port mappings
API_HOST=0.0.0.0
API_PORT=8000

# Server Configuration
UVICORN_WORKERS=4
UVICORN_WORKER_CONNECTIONS=1000
UVICORN_KEEPALIVE=5
UVICORN_ACCESS_LOG=true

# =============================================
# REDIS CONFIGURATION (Optional)
# =============================================
# Redis is OPTIONAL - set REDIS_ENABLED=false to disable
# When disabled, the application will run without caching

REDIS_ENABLED=false
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================
# BINANCE API CONFIGURATION (CRYPTO TRADING)
# =============================================

# Binance API Credentials
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_key_here

# Binance Settings
BINANCE_TESTNET=true  # Set to false for real trading
BINANCE_BASE_URL=https://api.binance.com  # Production
BINANCE_TESTNET_URL=https://testnet.binance.vision  # Testnet

# WebSocket Settings
BINANCE_WS_URL=wss://stream.binance.com:9443
BINANCE_TESTNET_WS_URL=wss://stream.testnet.binance.vision

# Trading Settings
BINANCE_RECV_WINDOW=5000  # Request validity window (ms)
BINANCE_TIMEOUT=30  # API timeout (seconds)

# =============================================
# EXTERNAL SERVICES (LEGACY - Stock Trading)
# =============================================

# Market Data Providers (if using stock data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
IEX_CLOUD_API_KEY=your_iex_cloud_api_key
FINNHUB_API_KEY=your_finnhub_api_key

# Email Service (for notifications)
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_TLS=true

# =============================================
# MONITORING AND LOGGING
# =============================================

# Prometheus Monitoring (Optional - application will work without it)
# Note: If prometheus_client is not installed, metrics will be disabled gracefully
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Log Aggregation
LOGSTASH_HOST=logstash
LOGSTASH_PORT=5044

# =============================================
# BACKUP AND ARCHIVAL
# =============================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Archive Configuration
ARCHIVE_ENABLED=true
ARCHIVE_RETENTION_MONTHS=84  # 7 years for regulatory compliance

# =============================================
# NOTIFICATION SETTINGS
# =============================================

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# PagerDuty Integration (optional)
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_key

# =============================================
# COMPLIANCE REPORTING
# =============================================

# Regulatory Reporting
AUTO_GENERATE_REPORTS=true
REPORT_SCHEDULE=0 6 * * 1  # Weekly on Monday at 6 AM

# Compliance Officer Notifications
COMPLIANCE_EMAIL=compliance@yourcompany.com
RISK_MANAGER_EMAIL=risk@yourcompany.com

# =============================================
# DEVELOPMENT OVERRIDES
# =============================================
# Uncomment for development/staging environments

# DEBUG=true
# LOG_LEVEL=DEBUG
# SQL_ECHO=true
# ENABLE_QUERY_LOGGING=true
# RATE_LIMIT_ENABLED=false