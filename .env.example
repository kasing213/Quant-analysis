# Development Environment Configuration
# Copy this to .env and update with your actual API keys

# =============================================
# PIPELINE SELECTION
# =============================================
# Choose your pipeline mode: binance_paper | binance_live
# This controls which credentials and services are used
CURRENT_PIPELINE=binance_paper

# =============================================
# BINANCE API CREDENTIALS (Pipeline-Specific)
# =============================================

# --- BINANCE PAPER TRADING (TESTNET) ---
# FREE - No signup required, instant keys
# Visit: https://testnet.binance.vision/
# Click "Generate HMAC_SHA256 Key"
# Used when CURRENT_PIPELINE=binance_paper
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_testnet_secret_here

# --- BINANCE LIVE TRADING (PRODUCTION) ---
# REAL MONEY - Requires Binance account
# Visit: https://www.binance.com/en/my/settings/api-management
# Used when CURRENT_PIPELINE=binance_live
BINANCE_LIVE_API_KEY=your_production_api_key_here
BINANCE_LIVE_API_SECRET=your_production_secret_here

# --- LEGACY CREDENTIALS (Backward Compatibility) ---
# These are used as fallback if pipeline-specific keys are not set
BINANCE_API_KEY=your_testnet_api_key_here
BINANCE_API_SECRET=your_testnet_secret_here

# --- BINANCE SETTINGS ---
BINANCE_TESTNET=true              # Only used for backward compatibility
BINANCE_TEST_MODE=true            # Force test mode (simulated orders) even with real credentials

# =============================================
# DATABASE (Local Development)
# =============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trading_db
POSTGRES_USER=trader
POSTGRES_PASSWORD=dev_password_123

# =============================================
# REDIS (Local Development)
# =============================================
# Note: Pipeline mode automatically selects Redis database:
# - binance_paper uses DB 0
# - binance_live uses DB 1
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================
# APPLICATION SETTINGS
# =============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
API_HOST=0.0.0.0
API_PORT=8000

# =============================================
# BOT CONFIGURATION
# =============================================

# Trading Pairs (comma-separated)
TRADING_PAIRS=BTCUSDT,ETHUSDT,BNBUSDT

# Risk Management
MAX_POSITION_SIZE=100  # USD per trade
STOP_LOSS_PERCENTAGE=2  # 2% stop loss
TAKE_PROFIT_PERCENTAGE=5  # 5% take profit
MAX_DAILY_LOSS=500  # USD max daily loss across all bots

# RSI Settings
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# Data Settings
CANDLE_INTERVAL=1m  # 1 minute candles
LOOKBACK_PERIODS=200  # Number of candles to keep for indicators

# =============================================
# DASHBOARD & SERVICE SETTINGS
# =============================================
# Enable/disable bot orchestrator (Binance pipelines only)
BINANCE_ENABLE_BOTS=false

# Enable/disable market data streaming
BINANCE_ENABLE_MARKET_DATA=true

# Enable dashboard fixtures (paper mode only)
ENABLE_DASHBOARD_FIXTURES=true

# Dashboard symbols for Binance trading pairs
BINANCE_DASHBOARD_SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT
BINANCE_DASHBOARD_INTERVAL=1m
